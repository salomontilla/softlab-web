---
const { logo = "Default", titulo = "Default", contenido = "Default" } = Astro.props;
---

<div class="flex flex-col w-full  h-full bg-[#0074BD] rounded-b-2xl p-5 text-white shadow-lg 2xl:h-[320px] transition transform duration-300 hover:scale-105 justify-center">

  <div>
    <img src={logo} alt="Logo" class="h-14 w-auto mx-auto mb-4" />
    
    <h3 class="font-semibold text-center mb-2 text-xl md:text-2xl lg:text-3xl">
      {titulo}
    </h3>
    
    <p class="text-center text-base md:text-xl">
      {contenido}
    </p>
    
  </div>

</div>
