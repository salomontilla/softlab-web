---
const { logo = "Default", titulo = "Default", contenido = "Default" } = Astro.props;
---

<div class="flex flex-col  max-w-72 min-h-80 bg-[#0074BD] rounded-b-2xl p-5 text-white shadow-lg sm:text-lg md:text-lg lg:text-lg transition transform duration-300 hover:scale-105 justify-center">

  <div>
    <img src={`/softlab-web/logos/base/${logo}`} alt="Logo" class="h-14 w-auto mx-auto mb-4" />
    
    <h3 class="font-semibold text-center mb-2 text-2xl md:text-3xl lg:text-4xl">
      {titulo}
    </h3>
    
    <p class="text-center text-xl md:text-2xl">
      {contenido}
    </p>
    
  </div>

</div>